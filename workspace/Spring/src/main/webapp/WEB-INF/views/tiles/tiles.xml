<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">       
<tiles-definitions>
  <definition name="base-definition" template="/WEB-INF/views/tiles/layouts/defaultLayout.jsp">
    <!-- 정적인 부분: header, menu, footer -->
    <!-- 동적인 부분: body, title -->
    
    
    <!-- 동적인 부분 -->
    <put-attribute name="title" value=""/>
    <put-attribute name="body"  value=""/>
    
    <!-- 정적인 부분 -->
    <put-attribute name="header" value="/WEB-INF/views/tiles/template/header.jsp"/>
    <put-attribute name="menu"   value="/WEB-INF/views/tiles/template/menu.jsp"/>
    <put-attribute name="footer" value="/WEB-INF/views/tiles/template/footer.jsp"/>
    
  </definition>
  
  <!-- naver -->
  <definition name="naver/*" extends="base-definition">
     <put-attribute name="title" value="외부_API_Naver_search"/>
     <put-attribute name="body"  value="/WEB-INF/views/naver/{1}.jsp"/>
  </definition>
    
  <!-- file/upload.do -->
  <definition name="file/*" extends="base-definition">
     <put-attribute name="title" value="파일"/>
     <put-attribute name="body"  value="/WEB-INF/views/file/{1}.jsp"/>
  </definition>
    
  <!-- boot.do -->
  <definition name="boot/*" extends="base-definition">
     <put-attribute name="title" value="템플릿"/>
     <put-attribute name="body"  value="/WEB-INF/views/boot/{1}.jsp"/>
  </definition>
  
    
  <!-- hello.do -->
  <definition name="hello/*" extends="base-definition">
     <put-attribute name="title" value="헬로"/>
     <put-attribute name="body"  value="/WEB-INF/views/hello/{1}.jsp"/>
  </definition>
  
  <!-- 회원관리 -->
  <definition name="user/*" extends="base-definition">
     <put-attribute name="title" value="사용자관리"/>
     <put-attribute name="body"  value="/WEB-INF/views/user/{1}.jsp"/>
  </definition>  
  
